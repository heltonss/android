<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="input_label">
        <item name="android:textColor">@color/colorLabel</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="message">
        <item name="android:textColor">@color/colorResult</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="result">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/colorResult</item>
    </style>


    <style name="input_form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_edit_text</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="button">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">@color/colorGreen</item>
    </style>


</resources>
